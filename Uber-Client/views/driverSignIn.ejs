<html>
<head>
    <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-beta.2/angular.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" >
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.js"></script>
    <script src="http://angular-ui.github.io/ui-router/release/angular-ui-router.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular-animate.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.14.3.js"></script>    
    <script src="http://maps.google.com/maps/api/js"></script>
     <script src="http://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.min.js"></script>
    <script src = "/libraries/ng-infinite-scroll.min.js"></script>
    <script src="/angularjs/UberApplication.js"></script>
    <script src="/angularjs/driverController.js"></script>
    <link rel= "stylesheet" href="/stylesheets/style.css"></link>
    

    
    
</head>
<body style = "background-color : black" ng-app = "uberApp" ng-controller = "driverController">
    <div class = "container">
    
    <div class = "row">
        
        <div class = "col-md-4 col-md-offset-4" style = "left : 30px">
        
       
                <form class = "form" style = "position : absolute;">
                     <p class="center uber-logo-container">
                    <a href="/" class="uber-logo ir">Uber</a>
                 </p>
                <p class="focused-view-subtitle uppercase center border-center">
                <span> Log In </span></p>
                <div class="form-group">
              <label style = "color : white; width : 200px;">EMAIL</label>
                <input type="email" style = "width : 350px; height : 50px" class="form-control" ng-model = "credentials.email">
            </div>
            <div class="form-group">
              <label style = "color : white; width : 350px;">PASSWORD</label>
                <input type="password"  style = "width : 350px; height : 50px" class="form-control" ng-model = "credentials.password">
            </div><br>
                <div class="form-group">
                    <button class="btn btn-info" style = "width : 100%; height : 50px" ng-click = "authenticate(credentials)" id="group">SIGN IN</button>
            </div>
                <div ng-if = "errorDialog" class="alert alert-danger">
                    {{errorMessage}}
                </div>
            
                </form>
        </div>
        
        
        
    </div>
    
    </div>
    
</body>



</html>