<div ng-controller="adminBillsController">

 <label>Search bill based on bill id, customer id or driver id</label><br><br>

    <label for="billRadio">Bill ID:</label>
    <input id="billRadio" type="radio" ng-model="ssnid" value="Bill ID"  /><br />

    <label for="custRadio">Customer ID:</label>
    <input id="custRadio" type="radio" ng-model="ssnid"  value="Customer ID" /><br />

    <label for="driverRadio">Driver ID:</label>
    <input id="driverRadio" type="radio" ng-model="ssnid" value="Driver ID" /><br />
    <br />
    <input type="text" class="form-control" id="ssn_id_1" maxlength="3" placeholder="123" style="width:25%;display:inline;" ng-model="ssn_id_1"> -
   <input type="text" class="form-control" id="ssn_id_2" maxlength="2" placeholder="12" style="width:20%;display:inline;" ng-model="ssn_id_2"> - 
<input type="text" class="form-control" id="ssn_id_3" maxlength="4" placeholder="1234(SSN Number)" style="width:47%;display:inline;" ng-model="ssn_id_3">
		<br><br><br>
		
		<button class="btn btn-danger" style="background-color: black;color: #fff;border-color: black;" ng-click="searchBill()" data-toggle="modal" data-target="#billDetails_billid">Show Bill Details</button>
		<br>
		<div ng-if = "invalidSSN" class="alert alert-danger">{{invalidSSNmessage}}</div>
     <!--     <div ng-if = "billStatus" class="alert alert-danger">{{billStatusMessage}}</div>-->
		<div   ng-if="validBill"  class="modal fade" id="billDetails_billid" role="dialog">
     <div class="modal-dialog">
     <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Bill Details</h4>
           <br>
           <br>
         
  </div>
  <div class="modal-body">
  
  <div ng-if="valid" ng-repeat="billDetails in allBillDetails">
  <table ng-if="valid" class="table">
    <tr class="success">
        <td>Bill Id: {{billDetails.RIDE_ID}}</td>
    </tr>
     <tr class="success">
        <td>Bill Date: {{billDetails.BILLING_DATE}}</td>
    </tr>
     <tr class="success">
        <td>Pickup Time: {{billDetails.PICKUP_TIME}}</td>
    </tr>
     <tr class="success">
        <td>Drop off Time: {{billDetails.DROP_TIME}}</td>
    </tr>
     <tr class="success">
        <td>Distance Covered in miles: {{billDetails.DISTANCE}}</td>
    </tr>
     <tr class="success">
        <td>Pickup Location: {{billDetails.SOURCE_LOCATION}}</td>
    </tr>
     <tr class="success">
        <td>Drop off location : {{billDetails.DESTINATION_LOCATION}}</td>
    </tr>
     <tr class="success">
        <td>Customer Name: {{billDetails.CFNAME}}  {{billDetails.CLNAME}}</td>
    </tr>
     <tr class="success">
        <td>Driver Name: {{billDetails.dfname}}  {{billDetails.dlname}}</td>
    </tr>
     <tr class="success">
        <td><b>Bill Amount: $ {{billDetails.bill_amount}}</b></td>
    </tr>
  </table>
  <br><br><br>
  </div>
  </div>
				
    </div>
    </div>
    </div>
    </div>