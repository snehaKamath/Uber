<div class="row">

<div class="col-md-6" ng-controller="driverApprovalsController">
<table  class="table table-bordered"  >
    <thead class="info">
      <tr>
         <th><button ng-click="viewDriverApprovals()" style="width:100%;background-color: black;color: #fff;border-color: black;" class="btn btn-primary">View Driver approval requests</button></th>
        
      </tr>
    </thead>

   <tbody ng-if="driverApprovalClicked" >
    <tr><td>
<div ng-if = "driverApprovalStatus" class="alert alert-danger">{{driverApprovalStatusMessage}}</div></td></tr>
   <tr  ng-repeat="request in driverApprovals">
    <td>
    <!-- Trigger the modal with a button -->
    <button type="button"  ng-click=setCurrentDriverRequest(request) class="btn btn-success" style="width:100%" data-toggle="modal" data-target="#driverRequests">{{request.FIRSTNAME}}  {{request.LASTNAME}}</button>
    <div class="modal fade" id="driverRequests" role="dialog">
     <div class="modal-dialog">
     <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Approve Driver Request</h4>
           <br>
           <br>
         
  </div>
  <div class="modal-body">
  <table class="table">
    <tr class="success">
        <td>Driver SSN:{{currentDriverRequest.DRIVER_ID}}</td>
  </tr>
   <tr class="success">
        <td>First Name:{{currentDriverRequest.FIRSTNAME}}</td>
  </tr>
   <tr class="success">
        <td>Last Name:{{currentDriverRequest.LASTNAME}}</td>
  </tr>
   <tr class="success">
        <td>Address:{{currentDriverRequest.ADDRESS}}</td>
  </tr>
   <tr class="success">
        <td>City:{{currentDriverRequest.CITY}}</td>
  </tr>
   <tr class="success">
        <td>Primary Zipcode:{{currentDriverRequest.ZIP_PRIMARY}}</td>
  </tr>
  <tr class="success">
        <td>Secondary Zipcode:{{currentDriverRequest.ZIP_SECONDARY}}</td>
  </tr>
   <tr class="success">
        <td>State:{{currentDriverRequest.STATE}}</td>
  </tr>
   <tr class="success">
        <td>Phone number:{{currentDriverRequest.PHONE_NUMBER}}</td>
  </tr>
  <tr><td><div ng-if="noCarDetails" class="alert alert-danger">{{noCarDetailsMessage}}</div></td></tr>
 
  <tr class="success">
        <td>Car Brand:{{currentDriverRequest.carBrand}}</td>
  </tr>
  <tr class="success">
        <td>Car Number:{{currentDriverRequest.carNumber}}</td>
  </tr>
 
  <!--  <tr ng-if="videoFound" class="success">
    <td><video controls ><source src= "/images/video2.mp4" type="video/mp4"></video>
</td>
  </tr>-->
  </table>
  <div class="modal-footer">
          <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="approveDriverRequest()">Approve Request</button>
         <!--    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="rejectRequest()">Reject Request</button>-->
        </div>
  </div>
  </div>
  </div>
  </div>
  </td>
   </tr>
</tbody>
</table>
</div>
<div class="col-md-6" ng-controller="customerApprovalsController">

<table class="table table-bordered"  style="float: left">
    <thead class="info">
      <tr>
        
        <th><button ng-click="viewCustomerApprovals()"   class="btn btn-primary" style="width:100%;background-color: black;color: #fff;border-color: black;"  >View Customer approval requests</button></th>
      </tr>
    </thead>
 <tbody ng-if="customerApprovalClicked" >
      <tr><td>
<div ng-if = "customerApprovalStatus" class="alert alert-danger">{{customerApprovalStatusMessage}}</div></td></tr>
   <tr ng-repeat="request in customerApprovals">
    <td>
    <!-- Trigger the modal with a button -->
    <button type="button"  ng-click=setCurrentCustomerRequest(request) class="btn btn-success" style="width:100%" data-toggle="modal" data-target="#customerRequests">{{request.FIRSTNAME}}  {{request.LASTNAME}}</button>
    <div class="modal fade" id="customerRequests" role="dialog">
     <div class="modal-dialog">
     <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Approve Customer Request</h4>
           <br>
           <br>
         
  </div>
  <div class="modal-body">
  <table class="table">
    <tr class="success">
        <td>Customer SSN:{{currentCustomerRequest.CUSTOMER_ID}}</td>
  </tr>
   <tr class="success">
        <td>First Name:{{currentCustomerRequest.FIRSTNAME}}</td>
  </tr>
   <tr class="success">
        <td>Last Name:{{currentCustomerRequest.LASTNAME}}</td>
  </tr>
   <tr class="success">
        <td>Address:{{currentCustomerRequest.ADDRESS}}</td>
  </tr>
   <tr class="success">
        <td>City:{{currentCustomerRequest.CITY}}</td>
  </tr>
   <tr class="success">
        <td>Primary Zipcode:{{currentCustomerRequest.ZIP_PRIMARY}}</td>
  </tr>
  <tr class="success">
        <td>Secondary Zipcode:{{currentCustomerRequest.ZIP_SECONDARY}}</td>
  </tr>
   <tr class="success">
        <td>State:{{currentCustomerRequest.STATE}}</td>
  </tr>
   <tr class="success">
        <td>Phone number:{{currentCustomerRequest.PHONE_NUMBER}}</td>
  </tr>

  </table>
  <div class="modal-footer">
          <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="approveCustomerRequest()">Approve Request</button>
         <!--    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="rejectRequest()">Reject Request</button>-->
        </div>
  </div>
  </div>
  </div>
  </div>
  </td>
   </tr>
</tbody>
 </table>
</div>
</div>